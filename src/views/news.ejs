<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>News Website</title>
    <link rel="stylesheet" href="/css/styles.css">

         <!-- Bootstrap added -->
         <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
</head>
<body>

    
    <header class="header">
        <div class="header__logo">Today's News</div>
        <%- include('./partials/search.ejs') %>
    </header>
    
    <div class="wrapper conatiner-md pe-5 ps-5 py-5 px-5 mt-2">
        <div class="sub-nav mb-2">
            <!-- <marquee behavior="" direction=""> -->
                <div class="conatiner d-inline-block p-0 m-0">
                    IND
                </div>
                <div class="conatiner d-inline-block p-0 m-0">
                    Wed, Jan 11, 2023 | UPDATED 11:33PM IST
                </div>
                <div class="conatiner d-inline-block p-0 m-0">

                </div>
            <!-- </marquee> -->
        </div>
        <div class="sub-nav mb-4">
            <marquee behavior="" direction="">
                <div class="conatiner d-inline-block s-block p-0 m-0 me-3">
                    SENSEX &#129035;
                </div>
                <div class="conatiner d-inline-block s-block p-0 m-0 me-3">
                    NIFTY 50 &#129035;
                </div><div class="conatiner d-inline-block s-block p-0 m-0 me-3">
                    NIFTY BANK &#8679;
                </div><div class="conatiner d-inline-block s-block p-0 m-0 me-3">
                    NIFTY MIDCAP 100 &#129035;
                </div>
            </marquee>
        </div>
        <div class="conatiner-fluid px-5 py-5">
            <div class="news text-center">
                <% if(articles != null) { %>
                <% articles.forEach(function(article, index) { %>
                    <a href="/article/<%- article.id %>" class="news__card">
                        <img src="<%- article.thumbnail_url %>" alt="<%- article.title.rendered %>">
                        <h2><%- article.title.rendered %></h2>
                        <p><%- article.excerpt.rendered %></p>
                    </a>
                <% }) %>
                <% } else { %>
                    No posts found.
                <% } %>

                



            </div>
        </div>  
    </div>






    <!-- Bootstrap added -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
</body>
</html> 